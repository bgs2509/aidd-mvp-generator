{
  "description": "Настройки AIDD-MVP Generator для Claude Code",

  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Проверка: файл прочитан перед редактированием'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Файл изменён'"
          }
        ]
      }
    ]
  },

  "permissions": {
    "allow": [
      "Read(**)",
      "Glob(**)",
      "Grep(**)",
      "Bash(git :*)",
      "Bash(make :*)",
      "Bash(docker :*)",
      "Bash(pytest :*)",
      "Bash(ls :*)",
      "Bash(mkdir :*)",
      "Edit(**/*.py)",
      "Edit(**/*.md)",
      "Edit(**/*.yml)",
      "Edit(**/*.yaml)",
      "Edit(**/*.json)",
      "Edit(**/*.toml)",
      "Edit(**/Dockerfile)",
      "Edit(**/Makefile)",
      "Write(**/*.py)",
      "Write(**/*.md)",
      "Write(**/*.yml)",
      "Write(**/*.yaml)",
      "Write(**/*.json)",
      "Write(**/*.toml)",
      "Write(**/Dockerfile)",
      "Write(**/Makefile)"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/*.env)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/credentials.json)",
      "Read(**/secrets.json)",
      "Read(**/service-account.json)",
      "Read(**/*secret*)",
      "Edit(**/.env)",
      "Edit(**/.env.*)",
      "Edit(**/*.env)",
      "Edit(**/*.secret)",
      "Edit(**/*credentials*)",
      "Edit(**/*.pem)",
      "Edit(**/*.key)",
      "Write(**/.env)",
      "Write(**/.env.*)",
      "Write(**/*.env)",
      "Write(**/*.secret)",
      "Write(**/*credentials*)",
      "Write(**/*.pem)",
      "Write(**/*.key)",
      "Bash(rm -rf :*)",
      "Bash(sudo :*)",
      "Bash(cat **/.env*)",
      "Bash(cat **/*.pem)",
      "Bash(cat **/*.key)",
      "Bash(echo *PASSWORD*)",
      "Bash(echo *SECRET*)",
      "Bash(echo *TOKEN*)"
    ]
  }
}
