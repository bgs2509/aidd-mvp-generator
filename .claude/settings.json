{
  "description": "Настройки AIDD-MVP Generator для Claude Code",

  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Проверка: файл прочитан перед редактированием'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Файл изменён'"
          }
        ]
      }
    ]
  },

  "permissions": {
    "allow": [
      "Read(**)",
      "Glob(**)",
      "Grep(**)",
      "Bash(git :*)",
      "Bash(make :*)",
      "Bash(docker :*)",
      "Bash(pytest :*)",
      "Bash(ls :*)",
      "Bash(mkdir :*)",
      "Edit(**/*.py)",
      "Edit(**/*.md)",
      "Edit(**/*.yml)",
      "Edit(**/*.yaml)",
      "Edit(**/*.json)",
      "Edit(**/*.toml)",
      "Edit(**/Dockerfile)",
      "Edit(**/Makefile)",
      "Write(**/*.py)",
      "Write(**/*.md)",
      "Write(**/*.yml)",
      "Write(**/*.yaml)",
      "Write(**/*.json)",
      "Write(**/*.toml)",
      "Write(**/Dockerfile)",
      "Write(**/Makefile)"
    ],
    "deny": [
      "Edit(**/.env)",
      "Edit(**/*.secret)",
      "Edit(**/*credentials*)",
      "Write(**/.env)",
      "Write(**/*.secret)",
      "Write(**/*credentials*)",
      "Bash(rm -rf :*)",
      "Bash(sudo :*)"
    ]
  }
}
