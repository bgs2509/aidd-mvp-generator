# {{PROJECT_NAME}} - Environment Variables
# Скопируйте этот файл в .env и заполните значения

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/{{PROJECT_SLUG}}

# MongoDB (альтернатива)
# MONGODB_URL=mongodb://localhost:27017/{{PROJECT_SLUG}}

# =============================================================================
# REDIS
# =============================================================================

REDIS_URL=redis://localhost:6379/0

# =============================================================================
# APPLICATION
# =============================================================================

# Режим отладки (true/false)
DEBUG=false

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Секретный ключ (сгенерируйте: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here

# =============================================================================
# SERVICES PORTS
# =============================================================================

# Business API
API_PORT=8000

# Data API
DATA_API_PORT=8001

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Telegram Bot (если используется)
# TELEGRAM_BOT_TOKEN=your-bot-token

# Email (если используется)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# =============================================================================
# MONITORING (опционально)
# =============================================================================

# Sentry DSN
# SENTRY_DSN=https://xxx@sentry.io/xxx

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Для локальной разработки
# PYTHONDONTWRITEBYTECODE=1
# PYTHONUNBUFFERED=1
