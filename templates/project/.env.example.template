# {{PROJECT_NAME}} - Environment Variables
# Скопируйте этот файл в .env и заполните значения
#
# SECURITY: ОБЯЗАТЕЛЬНО замените все значения CHANGE_ME на реальные!
# Генерация секретов: openssl rand -hex 32

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL
# SECURITY: Замените CHANGE_ME на реальные credentials!
DATABASE_URL=postgresql://CHANGE_ME_USER:CHANGE_ME_PASSWORD@localhost:5432/{{PROJECT_SLUG}}

# MongoDB (альтернатива)
# MONGODB_URL=mongodb://CHANGE_ME_USER:CHANGE_ME_PASSWORD@localhost:27017/{{PROJECT_SLUG}}

# =============================================================================
# REDIS
# =============================================================================

REDIS_URL=redis://localhost:6379/0

# =============================================================================
# APPLICATION
# =============================================================================

# Режим отладки (true/false)
DEBUG=false

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Секретный ключ (сгенерируйте: openssl rand -hex 32)
# SECURITY: ОБЯЗАТЕЛЬНО замените на сгенерированное значение!
SECRET_KEY=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32

# =============================================================================
# SERVICES PORTS
# =============================================================================

# Business API
API_PORT=8000

# Data API
DATA_API_PORT=8001

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Telegram Bot (если используется)
# TELEGRAM_BOT_TOKEN=your-bot-token

# Email (если используется)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# =============================================================================
# MONITORING (опционально)
# =============================================================================

# Sentry DSN
# SENTRY_DSN=https://xxx@sentry.io/xxx

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Для локальной разработки
# PYTHONDONTWRITEBYTECODE=1
# PYTHONUNBUFFERED=1
